FROM nginx:1.24-alpine

WORKDIR /var/www/html

# Copy only the nginx server config we control
COPY docker/nginx/default.conf /etc/nginx/conf.d/default.conf

# Copy the Magento nginx sample into the image path expected by default.conf
COPY nginx.conf.sample /var/www/html/nginx.conf.sample

# Create log dir & set permissions (use nginx user)
RUN mkdir -p /var/log/nginx && \
    chown -R nginx:nginx /var/www/html /var/log/nginx

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
