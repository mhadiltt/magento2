ARG PHP_TAG=latest

FROM hadil01/pipe-php:${PHP_TAG} AS phpbuild

FROM nginx:1.24-alpine

WORKDIR /var/www/html

COPY docker/nginx/default.conf /etc/nginx/conf.d/default.conf
COPY nginx.conf.sample /var/www/html/nginx.conf.sample

COPY --from=phpbuild /var/www/html/pub/static /var/www/html/pub/static
COPY --from=phpbuild /var/www/html/pub/media /var/www/html/pub/media
COPY --from=phpbuild /var/www/html/pub/errors /var/www/html/pub/errors
COPY --from=phpbuild /var/www/html/pub /var/www/html/pub
COPY --from=phpbuild /var/www/html/index.php /var/www/html/index.php

RUN mkdir -p /var/log/nginx && \
    chown -R nginx:nginx /var/www/html /var/log/nginx /etc/nginx/conf.d

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
